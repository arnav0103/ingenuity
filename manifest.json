{
    "manifest_version": 2,
    "name": "Ingenuity",
    "description": "Provides accessibility features the webpage",
    "version": "1.0",
    "author": "Moakhs Kakkar",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "page_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Accessibility app"
    },
    "background": {
        "scripts": [
            "eventPage.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js",
                "jquery-3.4.1.min.js"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ]
}